        <input type="radio" id="radio2" name="method" value="walking" onclick="transitChange('walking')"><label for="radio2">Walking</label>
        <input type="radio" id="radio3" name="method" value="bicycling" onclick="transitChange('bicycling')"><label for="radio3">Bicycling</label>
