  <script src="https://maps.googleapis.com/maps/api/js?key=<%= Rails.application.secrets.google_api_key %>"></script>
  <style>
    .ui-content#map-canvas{
      height: 400px;
    }
    div#directions{
      height: 440px;
      width:  300px;
      background-color: #eee;
      position: absolute;
      top: 43px;
      overflow: scroll;
    }
