<div data-role="page">
  <div data-role="header" data-theme="b">
    <h1>Nudge a Friend</h1>
  </div><!-- /header -->
  <div id="form">
    <%if @error%>
      <%= @error %>
    <% else %>
      Select a friend to nudge. They will receive a text message saying you will go to <%=@event.name%> if they will.
      <form method = "post" action = "./nudge">
        <select name = "nudgee">
          <% @nudgeable_students.each do |student| %>
            <option value = "<%= student.id %>"><%= student.username %></option>
          <% end %>
        </select>
        <input type = "submit" value = "Nudge">
      </form>
    <% end %>
  </div>
  <!-- footer navigator -->
  <div data-role="footer" id="footer" data-position="fixed">
    <%= render "shared/navbar" %>
  </div><!-- /footer -->
</div><!-- /page -->
