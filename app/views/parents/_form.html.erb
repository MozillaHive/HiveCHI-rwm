<%= form_for @parent, url: parent_path, html: { "data-ajax" => false } do |f| %>
  <% if @parent.errors.any? %>
    <div class="error">
      <p><%= pluralize(@parent.errors.count, "error") %> prevented your profile from being saved:</p>
      <ul>
      <% @parent.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <%= f.fields_for :user do |u| %>
    <%= u.label :email %>
    <%= u.text_field :email %>
    <%= u.label :phone %>
    <%= u.text_field :phone %>
    <%= u.label :password %>
    <%= u.password_field :password %>
    <%= u.label :password_confirmation %>
    <%= u.password_field :password_confirmation %>
    <%= u.hidden_field :time_zone %>
    <script>
    $('#user_time_zone').val(getTimeZone())
    </script>
  <% end %>
  <%= f.submit "Submit" %>
<% end %>
