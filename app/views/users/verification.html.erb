<!DOCTYPE html>
<html>
  <head>
  <title>My Page</title>
</head>
<body>


<div data-role="page">

  <div data-role="header">
    <h1>Welcome Index</h1>
  </div><!-- /header -->
  <div>
    <% if flash[:errors] && !flash[:errors].empty? %>
    <ul>
      <% flash[:errors].each do |error| %>
      <li><%= error %></li>
      <% end %>
    </ul>
    <% end %>
  </div>
  <% unless @user.phone_verified %>
    <%= form_tag(action: "verify") do %>
      <%= label_tag "Phone verification code" %>
      <%= text_field_tag :phone_token %>
      <%= submit_tag "Verify" %>
    <% end %>
  <% end %>
  <% unless @user.email_verified %>
    <%= form_tag(action: "resend_confirmation_email") do %>
      <%= submit_tag "Resend Email" %>
    <% end %>
  <% end %>
  <!-- footer navigator -->
  <div data-role="footer" data-id="foo1" data-position="fixed">
  <%= render "shared/navbar" %>
</div><!-- /footer -->

</div><!-- /page -->

</body>
</html>
