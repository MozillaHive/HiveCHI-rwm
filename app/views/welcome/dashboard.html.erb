<body>
<div data-role="page" id="dashboard">
  <div data-role="header">
    <h1>Dashboard</h1>
  </div><!-- /header -->
   <div id = "notice" class = "notice">
    <%= flash[:notice] if flash[:notice] %>
  </div>
  <div data-role="collapsible-set">
    <div data-role="collapsible" data-collapsed="false">
      <h4>My Events</h4>
